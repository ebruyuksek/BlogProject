@using AdminWebApp.Models.PostCategory
@model PostCategoryCreateViewModel

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Create</h1>
</div>

<form asp-action="Add" method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Title</label>
                <input type="text" class="form-control" asp-for="Name">
            </div>
        </div>
        <div class="col-md-12">
            <div class="mb-3">
                <label asp-for="IsPassive" class="form-label">Is Passive</label>
                <input type="checkbox" asp-for="IsPassive">
            </div>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>



